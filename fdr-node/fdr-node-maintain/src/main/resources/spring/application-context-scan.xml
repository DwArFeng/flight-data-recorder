<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <!--扫描service的实现包。 -->
    <context:component-scan base-package="com.dwarfeng.fdr.impl.service">
        <!--排除service与维护方法无关的实现类。 -->
        <context:exclude-filter type="assignable" expression="com.dwarfeng.fdr.stack.service.MappingLookupService"/>
        <context:exclude-filter type="assignable" expression="com.dwarfeng.fdr.stack.service.RecordQosService"/>
        <context:exclude-filter type="assignable" expression="com.dwarfeng.fdr.stack.service.RecordService"/>
        <context:exclude-filter type="assignable"
                                expression="com.dwarfeng.fdr.stack.service.FilteredValueWriteService"/>
        <context:exclude-filter type="assignable"
                                expression="com.dwarfeng.fdr.stack.service.TriggeredValueWriteService"/>
        <context:exclude-filter type="assignable"
                                expression="com.dwarfeng.fdr.stack.service.PersistenceValueWriteService"/>
    </context:component-scan>
    <!--扫描dao的实现包。 -->
    <context:component-scan base-package="com.dwarfeng.fdr.impl.dao"/>
    <!--扫描cache的实现包。 -->
    <context:component-scan base-package="com.dwarfeng.fdr.impl.cache"/>
    <!--扫描配置类所在的包。 -->
    <context:component-scan base-package="com.dwarfeng.fdr.node.maintain.configuration"/>
    <!--扫描启动器有关的handler所在的包。 -->
    <context:component-scan base-package="com.dwarfeng.fdr.node.maintain.handler"/>
    <!--扫描aop增强所在的包。 -->
    <context:component-scan base-package="com.dwarfeng.subgrade.sdk.interceptor.analyse"/>
</beans>
